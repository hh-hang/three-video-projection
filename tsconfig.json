    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["node", "vite/client"],
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": ["src"]
}
